<%- model_class = Disciplina -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @disciplina.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @disciplina.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:curso_id) %>:</strong></dt>
  <dd><%= @disciplina.curso.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionario_id) %>:</strong></dt>
  <dd><%= @disciplina.funcionario.nome %></dd>
  <p>
  <strong>Alunos:</strong>
  <% @disciplina.turma.alunos.each do |aluno| %>
  <li><%= "Matricula: #{aluno.matricula} - Nome: #{aluno.nome}" %></li>
  <% end %>
</p>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              disciplinas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_disciplina_path(@disciplina), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              disciplina_path(@disciplina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
