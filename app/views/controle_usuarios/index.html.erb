
<h1>.::Usuários::.</h1>

<table>
  <thead>
   
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <th colspan="3"></th>
        <td><%= user.email %></td>
        <td><%= user.role %></td> 
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_registration_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_registration_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>       
      </tr>
    <% end %>
   <%= paginate @users %>
  </tbody>
</table>

